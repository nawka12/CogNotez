{
  "name": "cognotez",
  "version": "1.2.2",
  "description": "CogNotez - An AI-powered note app with local LLM integration",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "test-searxng": "node test-searxng.js",
    "test-tool-calling": "OPENROUTER_API_KEY=your-key SEARXNG_URL=http://localhost:8080 node test-searxng.js"
  },
  "keywords": [
    "notes",
    "ai",
    "electron",
    "llm",
    "privacy"
  ],
  "author": "nawka12",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "electron": "^30.0.0",
    "electron-builder": "^24.9.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "electron-updater": "^6.1.7",
    "express": "^4.18.0",
    "google-auth-library": "^10.3.0",
    "googleapis": "^160.0.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.3",
    "marked": "^12.0.0",
    "uuid": "^9.0.0"
  },
  "build": {
    "appId": "com.kayfahaarukku.cognotez",
    "productName": "CogNotez",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!build/**/*",
      "!*.md"
    ],
    "linux": {
      "target": "AppImage",
      "category": "Office",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity",
      "icon": "assets/icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "artifactName": "${productName}.Setup.${version}.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "nawka12",
      "repo": "CogNotez",
      "releaseType": "release"
    }
  }
}
